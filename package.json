{
  "name": "excelaipro",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "clean": "find . -name 'node_modules' -type d -exec rm -rf {} + && find . -name 'bun.lock' -type f -exec rm -rf {} + && bun i",
    "dev": "bun --filter '*' dev",
    "db:migrate": "bun --filter @excelaipro/db migrate",
    "db:push": "bun --filter @excelaipro/db push",
    "db:studio": "bun --filter @excelaipro/db studio",
    "db:pull": "bun --filter @excelaipro/db introspect",
    "dev:api": "bun --cwd packages/api dev",
    "dev:web": "bun --cwd packages/web dev",
    "build:web": "bun --cwd packages/web build",
    "docker:api": "docker build -f Dockerfile.api -t excelaipro-api .",
    "docker:web": "docker build -f Dockerfile.web -t excelaipro-web .",
    "docker:api:run": "docker run -p 3000:3000 excelaipro-api",
    "docker:web:run": "docker run -p 5173:5173 excelaipro-web",
    "commit": "git add . && git commit -m \"stuff\" && git push"
  },
  "packageManager": "bun@1.2.4",
  "dependencies": {
    "@geist-ui/core": "^2.3.8",
    "add": "^2.0.6"
  }
}
